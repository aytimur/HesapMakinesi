<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:inputType="textPersonName"
            android:text="0"
            android:ems="10"
            android:id="@+id/sayiGoster" android:gravity="right" android:paddingTop="60dp" android:paddingBottom="20dp"
            android:paddingRight="20dp" android:background="@color/edittextarkaplan"
            android:textColor="@color/buttonarkaplan" android:textSize="30sp"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnSil" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSilTik"/>
            <Button
                    android:text="+/-"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnArtiEksi"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="%"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnYuzde"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnYuzdeTik"/>
            <Button
                    android:text="/"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnBolme"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnOpTik"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn7" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="8"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn8" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="9"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn9" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="X"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnCarpim"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnOpTik"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn4" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="5"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn5" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="6"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn6" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="-"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnCikarma"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnOpTik"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn1" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="2"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn2" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="3"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn3" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="+"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnTopla"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnOpTik"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btn0" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/button7" android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1"/>
            <Button
                    android:text="."
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnNokta"
                    android:background="@drawable/buttonkenarlik"
                    android:textSize="24sp" android:layout_weight="1" android:onClick="btnSayiTik"/>
            <Button
                    android:text="="
                    android:layout_width="90dp"
                    android:layout_height="60dp" android:id="@+id/btnEsittir" android:background="@color/colorPrimary"
                    android:textSize="24sp" android:textColor="@color/buttonarkaplan" android:layout_weight="1"
                    android:onClick="btnEsittirTik"/>
        </TableRow>
    </TableLayout>
</LinearLayout>